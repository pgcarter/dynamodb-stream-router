  "compilerOptions": {
    "lib": ["es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "rootDir": "src",
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "types": [
    "node"
  ]
}
